<Window x:Class="IDE.NewFile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IDE"
        mc:Ignorable="d"
        Title="NewFile" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Content="New File"/>
        <TextBox Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" x:Name="fileName" Focusable="True" Text="New File.b"/>
        <Button Grid.Column="0" Grid.Row="2" x:Name="OK" Content="OK" Click="OK_Click"/>
        <Button Grid.Column="1" Grid.Row="2" x:Name="Cancel" Content="Cancel" Click="Cancel_Click"/>
    </Grid>
</Window>
